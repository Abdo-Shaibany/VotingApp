<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp">

    <ImageView
        android:id="@+id/star_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/bill"
        android:paddingTop="5dp"/>

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingTop="5dp"
        android:id="@+id/star_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/star_photo"
        android:text="TextView" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/star_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/star_id"
        android:layout_toEndOf="@+id/star_photo" />

    <TextView
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/star_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/star_type"
        android:layout_toEndOf="@+id/star_photo" />
</RelativeLayout>