<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.earchcor.www.votingapp.ProfileAct">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/toPassAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:onClick="buttonClicked"
        android:layout_below="@+id/Result_button"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/Result_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/show_rates"
        android:onClick="buttonClicked"
        android:text="send results" />

    <Button
        android:id="@+id/show_rates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvWelcome"
        android:onClick="buttonClicked"
        android:text="Show Voting" />

</RelativeLayout>
